cd ~/ros2_autonomous_robot
colcon build
source install/setup.bash

# Terminal A:
ros2 run turtlesim turtlesim_node

# Terminal B:
ros2 run autonomous_turtle avoid_walls

# Kill all Gazebo
killall -9 gzserver gzclient 

# running the code:
ros2 topic pub /cmd_vel geometry_msgs/Twist "{linear: {x: 0.15}, angular: {z: 0.4}}"

#TF Tree
ros2 run tf2_tools view_frames
xdg-open frames.pdf

# 1) Run the simulator
ros2 topic hz /scan
source install/setup.bash
ros2 launch autonomous_robot_description sim.launch.py

# 2) SLAM
ros2 launch autonomous_turtle slam.launch.py

# 3) Navigation
ros2 launch autonomous_turtle nav2.launch.py

ros2 launch autonomous_turtle nav2l.aunch.py use_sim_time:=true

# 4) Rviz2 
rviz2

# 5) Viz setup:
fixed frame: map
add:
1. Map
2. LaserScan
