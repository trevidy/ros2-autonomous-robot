cd ~/ros2_autonomous_robot
colcon build
source install/setup.bash

# Terminal A:
ros2 run turtlesim turtlesim_node

# Terminal B:
ros2 run autonomous_turtle avoid_walls

# Kill all Gazebo
killall -9 gzserver gzclient 

# Run the simulator
export LIBGL_ALWAYS_SOFTWARE=1
source install/setup.bash
ros2 launch autonomous_robot_description sim.launch.py

# running the code:
ros2 topic pub /cmd_vel geometry_msgs/msg/Twist "
linear:
  x: 0.2
angular:
  z: 0.0"

ros2 topic pub /cmd_vel geometry_msgs/msg/Twist "
angular:
  z: 0.5"

#TF Tree
ros2 run tf2_tools view_frames
xdg-open frames.pdf

# SLAM
ros2 launch autonomous_turtle slam.launch.py

# Navigation
ros2 launch autonomous_turtle nav2.launch.py

# RViz2 
rviz2

# RViz setup:
fixed frame: map
add:
1. Map
2. LaserScan
3. TF
4. RobotModel
5. Path - local path
6. Path - Global path
6. Pose -> goal pose
